<br/>
<div class="container" style="background-color: white; border-radius: 5px;"><br/>
<p><h2 class="text-muted"> Track an Order</h2></p>
<br/>
<form action="/track" method="GET">
    <div class="form-group" >
        <input type="text" name="search" id="search" placeholder="Search" required autofocus class="form-control">&nbsp
        <p></p>
         <input type="submit" class="btn btn-success" value="search">
    </div>
</form>
<br/>
</div>
<% include ./partials/messages %>
<br/>
<table class="table table-bordered table-light table-hover">
    <% if(order) { %>
        <div class="container">
            <thead class="thead-light">
                    <th>Customer Name</th>
                    <th>Customer Email</th>
                    <th>Customer Address</th>
                    <th>Customer Phone</th>
                    <th>Pick Up Location</th>
                    <th>Drop Off Location</th>
                    <th>Transport Vehicle Assigned</th>
            </thead>
            <tbody>
                    <td><%= order.cname %></td>
                    <td> <%= order.cemail %></td>
                    <td> <%= order.caddress %></td>
                    <td><%= order.cphone %></td>
                    <td> <%= order.plocation %></td>
                     <td> <%= order.dlocation %></td>
                    <td><%= order.vehicle %></td>
            </tbody>
        </div>

        <% } else { %>
            <div class="container" style="background-color: white;">
            <p> No Data found </p>
        <% } %>
    </div>
</table>
