          </select>
        </div>
        <div class="form-group">
          <label for="phone">Customer Phone Number</label>
          <input
            type="phone"
            id="cphone"
            name="cphone"
            class="form-control"
            autocomplete="off"
            placeholder="Enter a valid Phone Number"
          />
        </div>
        <div class="form-group">
          <label for="info">Customer Home Address</label>
          <textarea
            type="name"
            id="caddress"
            name="caddress"
            class="form-control"
            rows="5"
            maxlength="200"
            cols="100"
            placeholder="Address"
          ></textarea>
        </div>
        <div class="form-group">
