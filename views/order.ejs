        <div class="form-group">
          <label for="email">Customer Email</label>
          <input
            type="email"
            id="cemail"
            name="cemail"
            class="form-control"
            placeholder="Enter Email"
            autocomplete="off"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="plocation">Pick Up Location:</label>
