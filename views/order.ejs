          <label for="name">Customer Name</label>
          <input
            type="name"
            id="cname"
            name="cname"
            class="form-control"
            placeholder="Enter Name"
            autocomplete="off"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
